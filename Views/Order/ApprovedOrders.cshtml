@model List<PantryManagementSystem.Models.DTO.MyOrderDTO>

@{
    ViewData["Title"] = "Approved Orders";
}

<h2>Approved Orders</h2>

@if (Model.Count == 0)
{
    <p>No approved orders found.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Item Name</th>
                <th>Quantity</th>
                <th>Status</th>
                <th>Request Date</th>
                <th>Issued Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.PantryItemName</td>
                    <td>@order.Quantity</td>
                    <td>@order.Status</td>
                    <td>@order.RequestDate.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>
                        @(order.IssuedDate.HasValue
                                        ? order.IssuedDate.Value.ToString("dd/MM/yyyy HH:mm")
                                        : "-")
            </td>
        </tr>
                }
        </tbody>
    </table>
}