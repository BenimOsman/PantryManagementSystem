@model IEnumerable<PantryManagementSystem.Models.Domain.Billing>
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "All Bills";
    var user = HttpContextAccessor.HttpContext?.User;
    var isAdmin = user?.IsInRole("Admin") ?? false;
    var isStaff = user?.IsInRole("Staff") ?? false;
}

<div class="container container-custom my-5">
    <div class="row justify-content-center">
        <div class="col-md-11">
            <div class="card shadow-sm card-custom">
                <!-- Card Header -->
                <div class="card-header text-white d-flex justify-content-between align-items-center"
                     style="background: linear-gradient(135deg, #6a11cb, #2575fc); border-radius: 12px 12px 0 0;">
                    <h4 class="mb-0">All Bills</h4>

                    @if (isStaff)
                    {
                        <a asp-action="Generate" class="btn btn-success btn-sm">
                            <i class="fa-solid fa-receipt me-1"></i> Generate Bill
                        </a>
                    }
                </div>

                <div class="card-body p-3">
                    <!-- Bills Table -->
                    <table class="table table-hover table-bordered align-middle text-center mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>Bill Id</th>
                                <th>User Email</th>
                                <th>Month</th>
                                <th>Total Amount</th>
                                <th>Generated Date</th>
                                <th style="width:180px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model == null || !Model.Any())
                            {
                                <tr>
                                    <td colspan="6" class="text-muted">No bills found.</td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var bill in Model)
                                {
                                    <tr>
                                        <td>@bill.Id</td>
                                        <td>@bill.UserEmail</td>
                                        <td>@bill.Month</td>
                                        <td>₹@bill.TotalAmount</td>
                                        <td>@bill.GeneratedDate.ToString("dd-MMM-yyyy")</td>
                                        <td class="text-center">
                                            <a asp-action="Details" asp-route-id="@bill.Id"
                                               class="btn btn-info btn-sm text-white me-1">
                                                <i class="fa-solid fa-eye"></i>
                                            </a>
                                            <a asp-action="DownloadPdf" asp-route-id="@bill.Id"
                                               class="btn btn-danger btn-sm">
                                                <i class="fa-solid fa-file-pdf"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div> <!-- card-body -->
            </div> <!-- card -->
        </div> <!-- col -->
    </div> <!-- row -->
</div>
